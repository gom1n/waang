<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homebtn"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/jua"
            android:text="           Waang"
            android:textColor="#B58DFA"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/alarm" />
    </LinearLayout>

    <TextView
        android:id="@+id/noticeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edge"
        android:padding="10dp"
        android:text="공지사항" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/jua"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/jua"
                android:text="수정님"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/jua"
        android:text="학번"
        android:textColor="#673AB7" />

    <TextView
        android:id="@+id/studentDepart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/jua"
        android:text="학과"
        android:textColor="#673AB7" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/graduate"
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="35dp"
                android:paddingTop="35dp"
                android:paddingRight="35dp"
                app:srcCompat="@drawable/grads" />

            <ImageView
                android:id="@+id/mileage"
                android:layout_width="150dp"
                android:layout_height="119dp"
                android:layout_margin="20dp"
                android:paddingLeft="35dp"
                android:paddingTop="35dp"
                android:paddingRight="35dp"
                app:srcCompat="@drawable/moneys" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/graduateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:gravity="center"
                android:text="졸업"
                android:textColor="#9F6AFD"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mileageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:gravity="center"
                android:text="마일리지 / 장학금"
                android:textColor="#9F6AFD"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/employ"
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_margin="20dp"
                android:paddingLeft="35dp"
                android:paddingTop="35dp"
                android:paddingRight="35dp"
                app:srcCompat="@drawable/jobs" />

            <ImageView
                android:id="@+id/mypage"
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_margin="20dp"
                android:paddingLeft="35dp"
                android:paddingTop="35dp"
                android:paddingRight="35dp"
                app:srcCompat="@drawable/infos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/employTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/jua"
                android:gravity="center"
                android:text="취업"
                android:textColor="#9F6AFD"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mypageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/jua"
                android:gravity="center"
                android:text="마이페이지"
                android:textColor="#9F6AFD"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>